#ifndef FLAGS_COMMAND_H_
#define FLAGS_COMMAND_H_

#define MATCHED                                               	1

#define NOT_MATCHED                                             0

#define PASSWORD_ONE_IS_RESIVED_Q								'O'

#define PASSWORD_TWO_IS_RESIVED_Q								'T'

#define PASSWORD_ONE_IS_RESIVED_A								'R'

#define PASSWORD_TWO_IS_RESIVED_A								'Z'

#define PREPARE_UART_TO_RECEIVE_FIRST_PASSWORD                 	'F'

#define PREPARE_UART_TO_RECEIVE_SECOND_PASSWORD       	       	'S'

#define ASK_UART_ABOUT_MATCHING_PASSWORDS					    'A'


#endif /* FLAGS_COMMAND_H_ */
